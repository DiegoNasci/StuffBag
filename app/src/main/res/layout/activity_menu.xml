<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="com.example.diego.stuffbag.MenuActivity">

    <TextView
        android:id="@+id/texto_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Escolha o que deseja:"
        android:textColor="@color/cor_texto_botao"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="89dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.265" />

    <Button
        android:id="@+id/button_imc"
        android:layout_width="130dp"
        android:layout_height="110dp"
        android:backgroundTint="@color/cor_botao_rosa"
        android:text="IMC"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/texto_menu"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/texto_menu"
        android:layout_marginTop="35dp"
        app:layout_constraintTop_toBottomOf="@+id/texto_menu"
        app:layout_constraintHorizontal_bias="0.0" />

    <Button
        android:id="@+id/button_calculadora"
        android:layout_width="130dp"
        android:layout_height="110dp"
        android:backgroundTint="@color/cor_botao_laranja"
        android:text="CALCULADORA"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@+id/button_media"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/button_media"
        android:layout_marginBottom="0dp"
        app:layout_constraintLeft_toRightOf="@+id/button_media"
        android:layout_marginLeft="30dp"
        app:layout_constraintVertical_bias="0.125" />

    <Button
        android:id="@+id/button_media"
        android:layout_width="130dp"
        android:layout_height="110dp"
        android:backgroundTint="@color/cor_botao_verde"
        android:text="MÉDIA"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/button_imc"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/button_imc"
        android:layout_marginTop="31dp"
        app:layout_constraintTop_toBottomOf="@+id/button_imc"
        app:layout_constraintHorizontal_bias="0.0" />

    <Button
        android:id="@+id/button_formulas"
        android:layout_width="130dp"
        android:layout_height="110dp"
        android:backgroundTint="@color/cor_botao_azul"
        android:text="FÓRMULAS"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@+id/button_imc"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/button_imc"
        android:layout_marginBottom="0dp"
        app:layout_constraintLeft_toRightOf="@+id/button_imc"
        android:layout_marginLeft="30dp"
        app:layout_constraintVertical_bias="0.0" />

</android.support.constraint.ConstraintLayout>
