<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.diego.stuffbag.IMCActivity">

    <TextView
        android:id="@+id/textView_peso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PESO"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/editText_altura"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/editText_altura"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/editText_altura" />

    <Button
        android:id="@+id/button_calc_imc"
        android:layout_width="124dp"
        android:layout_height="55dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/cor_botao"
        android:text="CALCULAR"
        android:textColor="@color/cor_texto_botao"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner"
        app:layout_constraintVertical_bias="0.267" />

    <EditText
        android:id="@+id/editText_peso"
        android:layout_width="214dp"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/textView_peso"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/textView_peso"
        app:layout_constraintHorizontal_bias="0.48"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView_peso" />

    <EditText
        android:id="@+id/editText_altura"
        android:layout_width="214dp"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/textView_altura"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/textView_altura"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView_altura" />

    <TextView
        android:id="@+id/textView_altura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ALTURA"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="81dp"
        android:layout_marginRight="123dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="214dp"
        android:layout_height="40dp"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/textView_sexo"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/textView_sexo"
        app:layout_constraintHorizontal_bias="0.483"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView_sexo" />

    <TextView
        android:id="@+id/textView_sexo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SEXO"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/editText_peso"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/editText_peso"
        app:layout_constraintHorizontal_bias="0.481"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/editText_peso" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="84dp"
        android:layout_height="66dp"
        app:srcCompat="@drawable/altura"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="81dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="84dp"
        android:layout_height="73dp"
        app:srcCompat="@drawable/peso"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/imageView"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/imageView"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="0.0" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="82dp"
        android:layout_height="67dp"
        app:srcCompat="@drawable/sexo"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/imageView2"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/imageView2"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintVertical_bias="0.0" />

</android.support.constraint.ConstraintLayout>
